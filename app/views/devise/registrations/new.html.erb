
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container", style="width: 33%">
    <h2 class="is-size-3 has-text-centered">Sign up</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class="control">
        <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: 'email',
            class: 'input is-rounded',
            placeholder: 'example@email.com'
        %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <%# <% if @minimum_password_length %1> %>
      <%#   <em>(<%= @minimum_password_length %1> characters minimum)</em> %>
      <%# <% end %1> %>
      <div class="control">
        <%= f.password_field :password, 
            autocomplete: 'new-password',
            class: 'input is-rounded',
            placeholder: 'super secure password'
        %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %>
      <div class="control">
        <%= f.password_field :password_confirmation, 
            autocomplete: 'new-password',
            class: 'input is-rounded',
            placeholder: 'repeat password'
        %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'button is-primary is-fullwidth is-rounded' %>
    </div>
  </div>
<% end %>

